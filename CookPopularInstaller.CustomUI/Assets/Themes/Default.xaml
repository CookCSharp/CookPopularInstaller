<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CookPopularUI.WPF;component/Themes/Colors/BaseColor.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <LinearGradientBrush x:Key="DefaultBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStopCollection>
            <GradientStop Offset="0" Color="#19273E" />
            <GradientStop Offset="1" Color="#080C14" />
        </GradientStopCollection>
    </LinearGradientBrush>

    <Color x:Key="PrimaryThemeColor">#FFA500</Color>
    <Color x:Key="AssistantThemeColor">#D2691E</Color>
    <SolidColorBrush x:Key="PrimaryThemeBrush" Color="{StaticResource PrimaryThemeColor}" />
    <SolidColorBrush x:Key="AssistantThemeBrush" Color="{StaticResource AssistantThemeColor}" />

    <Color x:Key="ControlMouseOverColor">#FFC125</Color>
    <Color x:Key="ControlPressColor">#DDA500</Color>
    <SolidColorBrush x:Key="ControlMouseOverBrush" Color="{StaticResource ControlMouseOverColor}" />
    <SolidColorBrush x:Key="ControlPressBrush" Color="{StaticResource ControlPressColor}" />

    <Color x:Key="PrimaryForegroundColor">#2C2C2C</Color>
    <Color x:Key="ControlForegroundColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="{StaticResource ControlForegroundColor}" />

    <Color x:Key="DataGirdCellFocusedColor">#FFA500</Color>
    <Color x:Key="DataGridRowSelectedColor">#FFC125</Color>
    <Color x:Key="DataGridRowMouseOverColor">#DDA500</Color>
    <Color x:Key="DataGridRowMouseOverSelected">#D2691E</Color>

    <SolidColorBrush x:Key="ToggleButtonCheckedBrush" Color="#2C2C2C" />

</ResourceDictionary>