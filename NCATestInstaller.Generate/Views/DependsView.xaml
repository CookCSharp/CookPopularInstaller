<UserControl x:Class="NCATestInstaller.Generate.Views.DependsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NCATestInstaller.Generate.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             xmlns:vm="clr-namespace:NCATestInstaller.Generate.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{Binding Source={d:DesignInstance Type={x:Type vm:DependsViewModel}}}"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:DependsViewModel />
    </UserControl.DataContext>

    <behavior:Interaction.Triggers>
        <behavior:EventTrigger EventName="Loaded">
            <behavior:CallMethodAction MethodName="OnLoaded" TargetObject="{Binding}" />
        </behavior:EventTrigger>
    </behavior:Interaction.Triggers>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="80"
                    Content="刷新"
                    Command="{Binding ReloadCommand}"
                    pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource RefreshGeometry}"
                    Style="{StaticResource NCATestInstaller.ButtonWithIconStyle}" />
            <Button Width="80"
                    Content="添加"
                    Margin="0,20"
                    Command="{Binding AddCommand}"
                    pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource CatalogGeometry}"
                    Style="{StaticResource NCATestInstaller.ButtonWithIconStyle}" />
            <Button Width="80"
                    Content="保存"
                    Command="{Binding SaveCommand}"
                    pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource SaveGeometry}"
                    Style="{StaticResource NCATestInstaller.ButtonWithIconStyle}" />
        </StackPanel>
        <ListView Grid.Column="1"
                  ItemsSource="{Binding Model.DependDialogVariables}"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  pc:ListViewAssistant.IsColumnHeaderFontWeight="True"
                  Style="{StaticResource ListViewGridViewStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="校验方式" DisplayMemberBinding="{Binding CheckType}" />
                    <GridViewColumn Header="校验值" DisplayMemberBinding="{Binding CheckValue}" />
                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="安装命令" DisplayMemberBinding="{Binding InstallCommand}" />
                    <GridViewColumn Header="位置" DisplayMemberBinding="{Binding Value}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
